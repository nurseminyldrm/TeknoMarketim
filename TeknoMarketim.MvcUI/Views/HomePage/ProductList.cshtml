@using TeknoMarketim.MvcUI.Models.ProductModel
@model ProductListModel
@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="product">
    <div class="container">
        <div class="col-md-4 products-left" style="margin-top:40px">

            <div class="categories">
                <ul class="cate">
                    @await Component.InvokeAsync("CategoryList")
                </ul>
            </div>
        </div>
        <div class="col-md-8 product-right">
            <div class="agile_top_brands_grids">
                <div class="row mb-5">
                    @foreach (var item in Model.Products)
                    {
                        <partial name="_PartialProductList" model="@item" />

                    }
                </div>
                <div page-model="@Model.PageInfo" style="text-align:center">
                </div>
                <div class="clearfix"></div>
            </div>

        </div>
        <div class="clearfix"></div>

    </div>
</div>