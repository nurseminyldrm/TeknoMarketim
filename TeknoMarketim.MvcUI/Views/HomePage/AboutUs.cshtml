    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="about" style="padding: 50px 0;">
    <div class="container">
        @* Sayfa Başlığı *@
        <div class="text-center" style="margin-bottom: 30px;">
            <h3 class="about-agileinfo w3layouts" style="font-size: 36px; color: #004284;">Biz Kimiz?</h3>
            <div style="width: 100px; height: 3px; background: #212121; margin: 10px auto;"></div>
        </div>

        <div class="col-md-12 about-wthree-grids grid-top">
            <h4 style="color: #212121; font-weight: bold; margin-bottom: 15px;">TeknoMarketim Dünyasına Hoş Geldiniz</h4>

            <p class="top" style="font-size: 1.1em; line-height: 1.8em; color: #555;">
                TeknoMarketim, Sivas merkezli ofisimizde, Türkiye'nin dört bir yanındaki teknoloji meraklılarına,
                öğrencilere ve mühendislere en kaliteli robotik ve elektronik komponentleri sağlamak amacıyla kurulmuştur.
            </p>

            <p style="margin-top: 20px; font-size: 1em; color: #666;">
                Müşteri memnuniyetini odağımıza alarak; Arduino setlerinden, 3D yazıcı parçalarına kadar geniş bir ürün yelpazesiyle
                teknoloji ekosistemine değer katıyoruz. Amacımız, projelerinizi gerçeğe dönüştürürken ihtiyacınız olan her türlü
                teknik desteği ve donanımı en hızlı şekilde sizlere ulaştırmaktır.
            </p>

            <hr style="margin: 30px 0;" />

            @* İletişim Bilgileri Bölümü *@
