@using ExampleCompanyApp.Core.Dtos  @* <-- Buraya kendi Core projenin adını yaz *@
@model List<ProductDto>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-4">
    <h1>Ürün Listesi</h1>
    <hr />


    <table class="table table-striped table-bordered">

        <thead class="thead-dark">
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>İşlemler</th>
            </tr>
        </thead>

       
        
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Stock</td>
                        <td>
                            <a class="btn btn-primary btn-sm">Düzenle</a>
                            <a class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Gösterilecek ürün bulunamadı.</td>
                </tr>
            }
        </tbody>



    </table>

</div>