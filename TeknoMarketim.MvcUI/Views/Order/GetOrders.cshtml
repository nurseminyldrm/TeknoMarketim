@model List<OrderListModel>
@{
    ViewData["Title"] = "Get Orders";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<h1 style="margin-top:80px; margin-left:110px;">Orders</h1>
<div style="margin-right:100px;margin-left:110px">

    @foreach (var item in Model)
    {
        <table class="table table-striped" style="margin-bottom:25px;margin-top:45px;">
            <thead>
                <tr style="background-color:#004284;color:white;">
                    <th>
                        Order :
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>

                        Quantity

                    </th>
                </tr>

            </thead>
            <tbody>

                @foreach (var orderItems in item.OrderItems)
                {
                    <tr>
                        <td>
                            <img src="~/img/@orderItems.ImageUrl" width="50" />
                        </td>
                        <td>@orderItems.Name</td>

                        @if (orderItems.DiscountedPrice == orderItems.Price)
                        {
                            <td>
                                @orderItems.Price
                            </td>

                        }
                        else
                        {
                            <td>
                                @orderItems.DiscountedPrice
                            </td>
                        }

                    </tr>
                }


            </tbody>
            <tfoot>
                <tr>
                    <td>
                        Customer Name:
                    </td>
                    <td>
                        @item.FirstName @item.LastName
                    </td>
                    <td>
                        <strong>Total : @item.TotalPrice()</strong>
                    </td>
                </tr>
                <tr>
                    <td>Adress:</td>
                    <td>
                        @item.Address
                    </td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td>
                        @item.Phone
                    </td>

                </tr>
                <tr>
                    <td>Email :</td>
                    <td>
                        @item.Email
                    </td>

                </tr>
                <tr>
                    <td>Payment Status:</td>
                    <td>
                        @item.PaymentTypes
                    </td>

                </tr>
                <tr>
                    <td>Order Status:</td>
                    <td>
                        @item.OrderState
                    </td>

                </tr>

            </tfoot>


        </table>


    }

</div>